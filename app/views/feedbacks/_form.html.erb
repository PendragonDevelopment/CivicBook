<%= simple_form_for(@feedback) do |f| %>
  <%= f.error_notification %>
  <div class="col-sm-12">

    <div class="form-group">
      <%= f.label :title, class: 'control-label' %>
      <%= f.input_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :survey_type, class: 'control-label' %>
      <%= f.input_field :survey_type, as: :select, collection: Feedback.survey_types.map { |k,v| [k.humanize, k] }, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :survey_url, class: 'control-label' %>
      <%= f.input_field :survey_url, class: 'form-control' %>
    </div>
  </div>

  <div class="form-actions col-sm-12">
    <%= f.button :submit %>
  </div>
<% end %>
