<div class="container content">
  <p id="notice"><%= notice %></p>

  <h1>Surveys</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Survey Title</th>
        <th>Take this survey</th>
        <th>Requested by</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @feedbacks.each do |feedback| %>
        <tr>
          <td><%= feedback.title %></td>
          <td><%= link_to 'Link to survey', feedback %></td>
          <td><%= feedback.representative_profile.name if feedback.representative_profile %></td>
          <% if current_user && current_user.admin? %>
            <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
            <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
