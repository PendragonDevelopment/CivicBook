<%= simple_form_for(@representative_profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :office %>
    <%= f.input :district %>
    <%= f.input :term_start, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year - 12,
                              order: [:day, :month, :year] %>
    <%= f.input :term, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year - 12,
                              order: [:day, :month, :year] %>
    <%= f.input :bio %>
    <%= f.input :profession %>
    <%= f.input :phone_number %>
    <%= f.input :party_affiliation %>
    <%= f.input :official_email %>
    <%= f.input :avatar %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
